rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for sessions collection
    match /sessions/{sessionId} {
      // Allow read/write only if the user is signed in (even anonymously)
      allow read, write: if isSignedIn();
      
      // In a production app with more granular security, you might want:
      // allow create: if isSignedIn();
      // allow update: if isSignedIn() && request.resource.data.players.size() <= 20; // Limit players
    }
  }
}
